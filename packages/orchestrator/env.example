PORT=3004
NODE_ENV=development

# OpenAI Configuration (Optional - only if you want to fallback to API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Service Endpoints
AUTH_SERVICE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Conversation Settings
MAX_CONVERSATION_DURATION=1800
MAX_TURNS_PER_CONVERSATION=50
RESPONSE_TIMEOUT_MS=10000
STT_TIMEOUT_MS=5000
TTS_TIMEOUT_MS=8000

# Demo Mode
DEMO_MODE=true
MOCK_LLM_RESPONSES=true

# STT Configuration - Python Whisper (FREE!)
STT_PROVIDER=python-whisper
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
PYTHON_PATH=python3

# Fallback to OpenAI API if local fails (optional)
STT_FALLBACK_TO_OPENAI=false

# TTS Provider
TTS_PROVIDER=murf

# Murf TTS
MURF_API_KEY=your_murf_api_key
MURF_VOICE_ID=en-US_Allison
MURF_API_URL=https://api.murf.ai/v1/speech

# Optional: orchestrator waits for auth-service
AUTH_INIT_TIMEOUT_MS=60000
