{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../..", 
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "kyutai-client": ["../kyutai-client/src"],
      "kyutai-client/*": ["../kyutai-client/src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
